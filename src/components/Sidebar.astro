    justify-content: space-between;
  }
  button {
    display: flex;
    align-items: center;
    color: white;
    max-width: fit-content;
    background-color: var(--black);
    font-family: var(--ff);
    /* font-size: 1rem; */
  }
  p {
    font-size: 10px;
    color: #979696;
    margin-top: 6rem;
  }
  a {
    display: flex;
    align-items: center;
  }
  .secondpart img {
    margin: 8px;
    height: 24px;
  }
  .like {
    border: 0;
  }
  .bottomdiv {
    margin-top: auto;
  }
</style>

