<style>
  .sidebar {
    display: flex;
    flex-direction: column;
    padding: 2rem 1rem 0;
    opacity: 0.7;
    height: 100%;
  }
  .flexa {
    display: flex;
    align-items: center;
  }
  .spotifylogo {
    color: white;
